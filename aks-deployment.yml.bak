apiVersion: apps/v1
kind: Deployment
metadata:
  name: cmb-front-deployment
  labels:
    app: cmb-front
    nviroment: Desarrollo
    date_create: 24-04-2021
    team: PCS
    name: cmb-cloud-front
spec:
  replicas: 1
  revisionHistoryLimit: 10
  selector:
    matchLabels:
      app: cmb-front
  template:
    metadata:
      name: cmb-front-service
      labels:
        app: cmb-front
    spec:
      nodeSelector:
          plataform: <selector>
      containers:
        - name: cmb-front
          image: <image>
          imagePullPolicy: Always
          resources:
            limits:
              memory: 200Mi
            requests:
              memory: 100Mi
          ports:
            - name: http
              containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: cmb-front-np
  labels:
    app: cmb-front
spec:
  type: NodePort
  selector:
    app: cmb-front
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
---